@model tblParts

<div class="container">
    <h2>Edit Part</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="PartsId"></label>
            <input  asp-for="PartsId" readonly class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PartsName"></label>
            <input asp-for="PartsName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PartsPrice"></label>
            <input asp-for="PartsPrice" class="form-control" />
        </div>
        <button class="btn btn-primary" type="submit" style="width=150px">Update</button>
    </form>

</div>