@model IEnumerable<tblParts>

<div class="container pt-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Parts List</h2>
        </div>
        <div class="col-6 text-end align-bottom">
            <a asp-controller="Parts" asp-action="Create" class="btn btn-info">Add Item</a>
        </div>
    </div>

    <table class="table table-bordered table-striped text-center align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price($)</th>
            <th>Date Added</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var parts in Model)
        {
            <tr>
                <td>@parts.PartsId</td>
                <td>@parts.PartsName</td>
                <td>@parts.PartsPrice</td>
                <td>@parts.DateAdded</td>
                <td>
                    <div class="d-flex">
                            <a asp-controller="Parts" asp-action="Edit" asp-route-id="@parts.PartsId" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-danger gap-3 ms-1"><i class="bi bi-trash3-fill"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    </table>
</div>