@model IEnumerable<AucklandTalyer.Models.tblCustomer>
<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-info">Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Add New Customer</a>
        </div>
       <hr />
    </div>
<table class="table table-bodered table-striped">
    <thead class="text-center">
        <tr>
            <th>Rego</th>
            <th>Customer Name</th>
            <th>Car Make</th>
            <th>Car Model</th>
            <th>Payment Status</th> 
            <th>Date Added</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center align-middle">
            @{
                // Sort the Model by DateAdded in descending order
                var sortedModel = Model.OrderByDescending(c => c.DateAdded);
            }
        @foreach (var customer in sortedModel)
        {
            <tr> 
                <td><a href="/GRPOGreenBeans/Create?transNo= + @customer.CarRego" style="color: #3895D3 !important;"> @customer.CarRego</a></td>
                <td>@customer.CustomerName</td>
                <td>@customer.CarMake</td>
                <td>@customer.CarModel</td>
                <td>@customer.PaymentStatus</td>
                <td>@customer.DateAdded.ToString("yyy-MM-dd")</td>
                <td class="">
                    <div class="d-flex">
                            <a asp-controller="Customer" asp-action="Edit" asp-route-Rego="@customer.CarRego" class="btn btn-warning"><i class="bi bi-plus-square"></i></a>
                            <a class="btn btn-danger gap-3 ms-1"><i class="bi bi-trash3-fill"></i></a>
                    </div>
                   
                </td>
            </tr>
        }
    </tbody>

</table>
</div>