@model IEnumerable<AucklandTalyer.Models.Dto.CustomerListDto>

<table class="table table-bodered table-striped">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Total Price</th>
            <th>Payment Status</th>
            <th>Work Status</th>
         @*    <th></th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.CustomerName</td>
                <td>@customer.TotalPrice</td>
                <td>@customer.PaymentStatus</td>
                <td>@customer.WorkStatus</td>
            </tr>
        }
    </tbody>

</table>