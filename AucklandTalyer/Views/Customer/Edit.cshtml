@model List<tblCustomer>


<div class="container mt-4">
    <h2 class="text-info">Customer Details</h2>

    <div class="border border-secondary p-3 col-3 mb-4">
        @foreach(var customer in Model)
        {
            <span class="fw-bold">Rego:</span> @customer.CarRego <br />
            <span class="fw-bold">Customer Name:</span> @customer.CustomerName <br />
            <span class="fw-bold">Car Make:</span> @customer.CarMake <br />
            <span class="fw-bold">Car Model:</span> @customer.CarModel <br />
            <span class="fw-bold">Payment Status:</span> @customer.PaymentStatus <br />
        }
    </div>
    <div>
        <div class="row mb-2">
            <div class="col-6">
                <h3 class="text-info">Car Issue</h3>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary text-uppercase"><i class="bi bi-plus-circle"></i> Add Item</a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead class="text-center align-middle">
                <tr>
                    <th>Problem</th>
                    <th>Description</th>
                </tr>
            </thead>
        </table>
    </div>

   
</div>
